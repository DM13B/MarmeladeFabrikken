<Window x:Class="MarmeladeFabrikken.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="369" Width="539">
    <Grid>
        <ListView x:Name="BatchListView" HorizontalAlignment="Left" Height="237" Margin="10,29,0,0" VerticalAlignment="Top" Width="148">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <ListView x:Name="ControlListView" HorizontalAlignment="Left" Height="237" Margin="163,29,0,0" VerticalAlignment="Top" Width="344">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="AddProductButton" Content="Nyt Produkt" HorizontalAlignment="Left" Margin="163,2,0,0" VerticalAlignment="Top" Width="75" Click="AddProductButton_Click"/>
        <Button x:Name="NewBatchButton" Content="Ny Batch" HorizontalAlignment="Left" Margin="40,271,0,0" VerticalAlignment="Top" Width="75"/>
        <ComboBox x:Name="ProductMenu" HorizontalAlignment="Left" Margin="10,2,0,0" VerticalAlignment="Top" Width="148" SelectionChanged="ProductMenu_SelectionChanged"/>

    </Grid>
</Window>
